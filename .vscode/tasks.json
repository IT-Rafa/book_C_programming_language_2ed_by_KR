{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe compilar archivo activo",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/nologo",
                "/Fo:",
                "${fileDirname}\\..\\obj\\",
                "/Fe:",
                "${fileDirname}\\..\\bin\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Tarea generada por el depurador."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe Construir Tests",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/nologo",
                "/Fo:",
                "${workspaceFolder}\\test\\obj\\",
                "/Fe:",
                "${workspaceFolder}\\test\\bin\\AllTest.exe",
                "${workspaceFolder}\\test\\src\\AllTests.c",
                "${workspaceFolder}\\test\\src\\CuTest\\CuTest.c",
                "${workspaceFolder}\\test\\src\\testUtil\\testUtil.c",
                "${workspaceFolder}\\test\\src\\chapter_1\\section_1.02\\src\\Section_1.2_Test.c",
                "${workspaceFolder}\\test\\src\\chapter_1\\section_1.03\\src\\Section_1.3_Test.c",
                "${workspaceFolder}\\test\\src\\chapter_1\\section_1.05\\section_1.05.1\\src\\Section_1.05.1_Test.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Tarea generada por el depurador."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe compilar archivo activo ver(1)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        },       {
			"type": "shell",
			"label": "gcc build active file",
			"command": "/usr/bin/gcc",
			"args": ["-g", "${file}", "-o", "${fileDirname}/../bin/${fileBasenameNoExtension}.out"],
			"options": {
			  "cwd": "/usr/bin"
			},
			"problemMatcher": ["$gcc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		  }
    ],
    "version": "2.0.0"
}
